<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MondayTask.HomePage"
             BackgroundColor="#f09c46">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="30" Spacing="10">
            <Image Source="logonew" WidthRequest="90" HeightRequest="90" HorizontalOptions="End"/>
            <AbsoluteLayout Margin="30">
                <Image Source="orangeSlice" Aspect="AspectFill"/>
                <Image Source="car1" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1"/>
            </AbsoluteLayout>

            <Label Text="Orange Ride" TextColor="White" FontSize="Large" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand"/>

            <Button Text="log in"
                BackgroundColor="White"
                TextColor="Black"
                Clicked="onloginButton_Clicked"
                CornerRadius="15"
                VerticalOptions="EndAndExpand"
                HorizontalOptions="FillAndExpand"
                Margin="20"/>
        
        </StackLayout>
    </ContentPage.Content>
</ContentPage>